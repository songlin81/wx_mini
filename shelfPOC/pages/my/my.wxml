<view id='myLogin'>
  <block wx:if='{{isLogin}}'>
    <image id='myIcon' src='{{src}}'></image>
    <text id='nickName'>{{nickName}}</text>
  </block>
  <button wx:else open-type='getUserInfo' bindgetuserinfo='getMyInfo'>
    未登录，点此登陆
  </button>
</view>

<view id='myFavorites'>
  <text>我的收藏 ({{num}})</text>
  <view id='news-list'>
    <view class='list-item' wx:for="{{newsList}}" wx:for-item="news" wx:key="index">
      <image src='{{news.image}}' mode='widthFix'></image>
      <text bindtap='goToDetail' data-prodid='{{news.goodsId}}'>◇ {{news.title}} ({{news.add_date}})</text>
    </view>
  </view>
</view>