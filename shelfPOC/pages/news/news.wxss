swiper {
  height: 280rpx;
}
swiper image {
  object-fit: cover;
  width: 100%;
  height: 100%;
}

#news-list {
  min-height: 600rpx;
  padding: 15rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid gray;
  height: 200rpx;
}
.list-item image{
  width:180rpx;
  margin: 10rpx;
}
.list-item text{
  width: 100%;
  line-height: 60rpx;
  font-size: 10pt;
}
.central {
  display: flex;
  align-items: top;
  justify-content: center;  
  width: 100%;
  height: 100%;
}
.loadmore_line{
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  margin-bottom: 20rpx;
}