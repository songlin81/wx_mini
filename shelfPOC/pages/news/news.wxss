swiper {
  height: 400rpx;
}
swiper image {
  object-fit: cover;
  width: 100%;
  height: 100%;
}

#news-list {
  min-height: 600rpx;
  padding: 15rpx;
}
.list-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
  height: 200rpx;
}
.list-item image{
  width:180rpx;
  margin: 10rpx;
}
.list-item text{
  width: 100%;
  line-height: 60rpx;
  font-size: 10pt;
}